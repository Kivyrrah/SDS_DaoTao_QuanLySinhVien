@page "/students/byclassroom/{ClassRoomId:int}"
@rendermode InteractiveServer

<h3>Danh sách Sinh viên @(string.IsNullOrEmpty(currentClassRoomName) ? "" : $"Lớp: {currentClassRoomName}")</h3>

@if (students == null && !loadFailed && !classRoomLoadFailed)
{
    <p><em>Đang tải...</em></p>
}
else if (loadFailed)
{
    <p class="text-danger"><em>Lỗi tải danh sách sinh viên: @errorMessage</em></p>
}
else if (classRoomLoadFailed)
{
    <p class="text-danger"><em>Lỗi tải thông tin lớp học: @classRoomErrorMessage</em></p>
}
else if (currentClassRoom == null)
{
    <p><em>Không tìm thấy thông tin lớp học.</em></p>
}
else
{
    <button class="btn btn-secondary mb-3" @onclick="GoToClassRoomList">Quay lại DS Lớp học</button>
    @if (students != null && students.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Sinh viên</th>
                    <th>Ngày sinh</th>
                    <th>Địa chỉ</th>
                    <th>Giáo viên lớp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in students)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Name</td>
                        <td>@student.Birthday.ToString("dd/MM/yyyy")</td>
                        <td>@student.Address</td>
                        <td>@student.TeacherNameViaClassroom</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p><em>Lớp này chưa có sinh viên nào.</em></p>
    }
}
